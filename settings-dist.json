{
    "httpEnabled":     true,
    "ioListenPort":    8080,

    "httpsEnabled":    false,
    "ioListenPortSsl": 8443,

    "useCache":        true,
    "language":        "en",

    "authentication": {
        "enabled":    false,
        "enabledSsl": false,
        "user":       "admin",
        "password":   "password"
    },

    "logging": {
        "enabled":       true,
        "file":          "devices-variables.log",
        "move":          true,
        "varChangeOnly": true,
        "writeInterval": 60
    },

    "commStats" : {
        "enabled":         true,
        "intervalMinutes": 15
    },

    "position" : {
        "longitude": 9.1833,
        "latitude":  48.7667
    },

    "repository": {
        "active" : "repository/repository.json",
        "list"   : ["repository/repository.json", "http://iobroker.com/download/repository.json"]
    },

    "useStats" : {
        "enabled": true,
        "options": {
            "uptime":   true,
            "adapters": true,
            "addons":   true,
            "os_name":  true,
            "platform": true
        }
    }
}
